/* components/bottom/bottom.wxss */
.bottombar{
  position: fixed;
  width: 100%;
  bottom: 0;
  border-top: 1px solid #eeeeee;
  display: flex;
  background-color: #fff;
}
.content{
  flex: 1;
  position: relative;
  overflow: hidden;
}
.img{
  width: 50rpx;
  height: 50rpx;
  float: left;
}
image{
  width: 100%;
  height: 100%;
}
.text{
  margin-top:6rpx; 
  margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: 500;
  float: left;
}
.dw{
  width:100%;
  position: absolute;
  height: 50rpx;
  top: 50%;
  left: 0;
  margin-top: -25rpx;
  border-left: 1px solid #f5f5f5;
}
.item{
  position: absolute;
  overflow: hidden;
  float: left;
  top: 0;
  left: 50%;
}
.item.collect{
  margin-left: -77rpx;
}
.item.share{
  margin-left: -82rpx;
  background-color: #32d47e;
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
}
.item.camera{
  margin-left: -78rpx;
}