.nav-city {
  width: 150rpx;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  font-weight: bold;
  font-size: 22px;
}

.section {
  font-size: 12px;
  background-color: #f5f8f8;
  position: absolute;
  height: 30px;
  overflow: hidden;
  border-radius: 15px;
  text-align: center;
  width: 360rpx;
  white-space: nowrap;
  right: 20px;
  left: 0;
  margin: auto;
}
.search_icon{
  margin-left: 12px;
  margin-top: 9px;
  float: left;
  width: 14px;
  height: 14px;
}
.placehold{
  float: left;
  margin-top: 7px;
  margin-left: 5px;
  color: #717476;
}
