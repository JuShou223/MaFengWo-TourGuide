/**index.wxss**/
page,.main{
  height: 100%;
}
.header {
  width: 100%;
  height: 160rpx;
  background-color: #354a98;
  display: flex;
  overflow: hidden;
}
/* 
view{
border: 1px solid black;
} */

.header_bdr {
  height: 100%;
  display: flex;
  justify-content: left;
  align-items: center;
}

.header_bdra {
  height: 90rpx;
  border-left: 6rpx solid #ffdc1e;
  border-right: 6rpx solid #ffdc1e;
  border-radius: 0 9rpx 9rpx 0;
}

.header .header_hd {
  width: 40%;
}

.header .header_title {
  margin-top: 20rpx;
  padding-left: 24rpx;
  font-size: 28rpx;
  color: #fff;
  opacity: 0.6;
  display: flex;
  align-items: center;
}

.dot {
  width: 2rpx;
  height: 2rpx;
  border: 2rpx solid #eaeaea;
  border-radius: 50%;
  margin-left: 2rpx;
  background-color: #eaeaea;
}

.header .header_city {
  color: #fff;
  font-size: 64rpx;
  padding-left: 24rpx;
  display: flex;
  align-items: center;
}

.downtips {
  height: 0px;
  float: left;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #eaeaea;
  margin-left: 2rpx;
}

.header_show {
  width: 59%;
  float: right;
}

.header_time {
  float: right;
  margin-right: 15px;
  background: #2a3c77;
  padding: 4rpx 10rpx;
  color: #fff;
  font-size: 20rpx;
  border-radius: 10rpx;
}

.header_showpeople {
  margin: 8rpx 0 12rpx;
  margin-right: 15px;
  width: 80%;
  text-align: right;
  float: right;
  color: #fff;
  font-size: 28rpx;
}

.header_avatars {
  position: relative;
  width: 50%;
  height: 40rpx;
  margin-right: 15px;
  float: right;
}

.header_avatar {
  border: 2rpx solid #fff;
  width: 50rpx;
  height: 50rpx;
  float: right;
  border-radius: 50%;
  position: absolute;
}

.a1 {
  right: 0;
}

.a2 {
  right: 40rpx;
}

.a3 {
  right: 80rpx;
}

.a4 {
  right: 120rpx;
}
.a5 {
  right: 160rpx;
}
.menu_list {
  width: 100%;
  display: flex;
  border-bottom: 2rpx solid #eaeaea;
  margin-bottom: 20rpx;
}
.list {
  height: 100%;
  padding:20rpx 0; 
  text-align: center;
  flex: 1;
  font-size: 36rpx;
  color: #6e757b;
}
.on {
  border-bottom: 2rpx solid #ffdc1e;
  color: black;
}
.highlight_list{
  width: 80%;
  margin-left: 20rpx;
  overflow: hidden;
}
.highlight{
  float: left;
  padding: 10rpx 24rpx;
  margin: 0 0 10rpx 10rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  background-color: #f5f8f8;
}
.active{
  background-color: #ffe244;
}
image{
  width:100%;
  height:100%;
}
.views{
  width: 100%;
  overflow: hidden;
  margin-top: 20rpx;
}
.view{
  width: 720rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
}
.view_item{
  width: 335rpx;
  float: left;
  margin: 0 10rpx;
}
.img{
  width: 100%;
  height: 237rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.label{
  float: left;
  font-size: 20rpx;
  border: 2rpx solid #ff7466;
  color: #ff7466;
  padding: 2rpx 8rpx;
  margin: 10rpx 6rpx 0 0;
}
.item_name{
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx 0 6rpx 0;
}
.item_tourists{
  font-size: 20rpx;
  color: #717476;
  margin-bottom: 6rpx;
}

.main_scro{
  height: 100%;
  overflow: hidden;
  
}